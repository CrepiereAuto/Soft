.recipe
  &-header
    // width: 100%
    // height: 100%
    font-size: 7vw
    &-container
      position: absolute
      height: 15%
      width: 100%
      text-align: center

  &-salty, &-sugary
    position: absolute
    display: block
    width: 45%
    height: 82%
    top: 18vh

  &-sugary
    right: 0

  &-title
    text-align: center
    font-size: 4vw

  &-list
    font-size: 2vw
    list-style: none

  &-selector
    position: absolute
    left: 40%
    right: 40%
    height: 100%
    width: 20%
    padding-top: 15%
    &-row
      height: 46%
      margin: auto
      display: table
    &-glyph
      font-size: 6vw
      font-weight: bold
      display: table-cell
      vertical-align: middle
    &-title
      font-weight: bold
      font-size: 6vh
      text-align: center
      margin: 0
      height: 8%
